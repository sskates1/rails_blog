<h3><%= @article.title %></h3>

<p>
  <%= "Posted by #{@article.author} at #{@article.created_at}" %>
</p>

<p>
  <%= @article.body %>
</p>

<p>
  Categories: <%= @article.category_names %>
</p>

<h4>Add a Comment</h4>

<form action="/articles/<%= @article.id %>/comments" method="post">
  <div>
    <label>Comment</label>
    <input name="body" value="<%= params[:body] %>">
  </div>

  <div>
    <label>Author</label>
    <input name="author" value="<%= params[:author] %>">
  </div>

  <div>
    <input type="submit" value="Submit">
  </div>
</form>

<h4>Comments</h4>

<% @article.comments.each do |comment| %>
  <p>
    <%= "#{comment.author} says: #{comment.body} (at #{comment.created_at})" %>
  </p>
<% end %>

